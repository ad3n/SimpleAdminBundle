{% block form_widget_compound %}
    {% if form.parent is empty %}
        {{ form_errors(form) }}
    {% endif %}

    {{ block('form_rows') }}

    {{ form_rest(form) }}
{% endblock form_widget_compound %}

{% block form_row %}
    <div class="form-group">
        {{ form_label(form) }}
        {{ form_errors(form) }}
        {{ form_widget(form) }}
    </div>
{% endblock form_row %}

{% block form_errors %}
    {% if errors|length > 0 %}
    <div class="callout callout-warning">
        {% for error in errors %}
            <p>{{ error.message }}</p>
        {% endfor %}
    </div>
    {% endif %}
{% endblock form_errors %}